<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layoutHolder">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:background="#ECECEC"
        android:id="@+id/topSection">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/vale"
                android:id="@+id/imageView"
                android:layout_weight="1" />

            <TextView
                android:text="Security Route Vale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView"
                android:textStyle="normal|bold"
                android:textColor="#EBAC12"
                android:textSize="24sp" />
        </LinearLayout>

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="52dp"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageButton"
            android:background="#00000000"
            android:layout_weight="5" />

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/middleSection"
        android:background="#1D9FD5"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:paddingTop="20dp">

        <TextView
            android:text="Menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textColor="#FFFFFF"
            android:textSize="36sp"
            android:fontFamily="sans-serif" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingTop="10dp">

            <ImageButton
                android:layout_width="189dp"
                android:layout_height="136dp"
                app:srcCompat="@drawable/liderfugavector"
                android:id="@+id/imageButton5"
                android:scaleType="fitCenter"
                android:background="#00000000" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="136dp"
                app:srcCompat="@drawable/brigadistavector"
                android:id="@+id/imageButton6"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="Meu lÃ­der de fuga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Meu ponto de encontro"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView6"
                android:layout_weight="1"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />

        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1"
            android:paddingTop="30dp">

            <ImageButton
                android:layout_width="189dp"
                android:layout_height="136dp"
                app:srcCompat="@drawable/megafonevector"
                android:id="@+id/imageButton3"
                android:scaleType="fitCenter"
                android:background="#00000000" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="136dp"
                app:srcCompat="@drawable/rotafugavector"
                android:id="@+id/imageButton4"
                android:scaleType="fitCenter"
                android:background="#00000000"
                android:layout_weight="1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="1">

            <TextView
                android:text="EMITIR ALERTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView7"
                android:layout_weight="0.69"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />

            <TextView
                android:text="Minha rota de fuga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView8"
                android:layout_weight="0.28"
                android:textColor="#FFFFFF"
                android:gravity="center_horizontal" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>